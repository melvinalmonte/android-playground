<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TRIATHLON REGISTRATION"
        android:textColor="#A9A9A9"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <EditText
        android:id="@+id/groupInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banner"
        android:layout_marginTop="40dp"
        android:autofillHints=""
        android:gravity="center"
        android:hint="Number of Athletes on Team"
        android:inputType="number"
        android:textSize="20sp" />
    <Spinner
        android:id="@+id/dropDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupInput"/>
    <ImageView
        android:id="@+id/bikeImg"
        android:src="@drawable/bikerider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/dropDown"
        />
    <Button
        android:id="@+id/computeCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPUTE COST"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/bikeImg"
        />
    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/computeCost"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorPrimaryDark"
        />


</RelativeLayout>